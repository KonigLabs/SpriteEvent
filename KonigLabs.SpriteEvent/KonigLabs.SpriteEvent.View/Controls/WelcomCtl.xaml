<UserControl x:Class="KonigLabs.SpriteEvent.View.Controls.WelcomCtl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KonigLabs.SpriteEvent.View.Controls"
             mc:Ignorable="d" Width="1080" Height="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Image Source="pack://Application:,,,/Resources/logo.png"/>
        <Label HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">CALL-TO-ACTION</Label>
        <Button Grid.Row="2" Command="{Binding StartCommand}">Старт</Button>
    </Grid>
</UserControl>
