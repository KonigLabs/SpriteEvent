                        <MultiBinding Converter="{StaticResource LiveViewImageConverter}">
                            <Binding Path="LiveViewImageStream" UpdateSourceTrigger="PropertyChanged" />
                            <Binding RelativeSource="{RelativeSource Mode=Self}" Path="ImageSource"/>
                            <Binding Path="Width" />
                            <Binding Path="Height" />
                        </MultiBinding>
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Rectangle.Fill>
        </Rectangle>-->
        <Button FontSize="50" Width="350" Height="150" Grid.Row="2" Command="{Binding TakePictureCommand}">Take photo</Button>
    </Grid>
</UserControl>
